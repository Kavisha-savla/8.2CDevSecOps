pipeline {
    agent any

    stages {
        stage('Checkout') {
            steps {
                git(
                    url: 'https://github.com/your_github_username/8.2CDevSecOps.git',
                    branch: 'main',
                    credentialsId: 'Kavisha-savla'  // Use your Jenkins stored GitHub PAT credential ID here
                )
            }
        }
        
        stage('Install Dependencies') {
            steps {
                bat 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                bat 'npm test || true'  // Allows pipeline to continue despite test failures
            }
        }
        
        stage('Generate Coverage Report') {
            steps {
                bat 'npm run coverage || true'  // Run coverage, ignore errors
            }
        }
        
        stage('NPM Audit (Security Scan)') {
            steps {
                bat 'npm audit || true'  // Show known vulnerabilities, ignore errors
            }
        }
    }
}
